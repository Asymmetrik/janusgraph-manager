{
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "downlevelIteration": true,
        "preserveConstEnums": true,
        "target": "ES5",
        "removeComments": true,
        "outDir": "build",
        "lib": ["ES2019"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
