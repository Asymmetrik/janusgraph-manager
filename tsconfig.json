{
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "downlevelIteration": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "removeComments": false,
        "outDir": "build",
        "sourceMap": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"],
}
