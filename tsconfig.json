{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "downlevelIteration": true,
        "preserveConstEnums": true,
        "target": "ES5",
        "removeComments": true,
        "outDir": "build",
        "lib": ["ES2019"],
        "sourceMap": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"],
}
